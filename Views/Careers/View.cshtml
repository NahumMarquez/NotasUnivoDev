@using NotasUnivoDev.Models.ViewModels
@model CareersViewModel

<div class="col-xl-12 col-md-12 col-sm-12 mt-3">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/Careers/Index">Careers</a></li>
            <li class="breadcrumb-item active" aria-current="page">View</li>
        </ol>
    </nav>
    <table class="table table-hover" id="CareersTable">
        <thead>

            <tr class="bg-primary text-white">
                <th colspan="3">Facultad: @Model.FacultiesList.FirstOrDefault().FacultyName</th>
            </tr>

            <tr>
                <th>Id</th>
                <th>Career Name</th>
                <th>Is Active</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.CareerId</td>
                <td>@Model.CareerName</td>
                <td>
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success">Activo</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Inactivo</span>
                    }
                </td>
            </tr>

            <theade>
                <tr class="bg-success text-white">
                    <td colspan="3"> <b>Materias que pertenecen a la carrera</b></td>
                </tr>


                <tr>
                    <th><b>Subject ID</b></th>
                    <th><b>Subject Name</b></th>
                    <th><b>Subject VU</b></th>
                </tr>


            </theade>

            <tbody>
                @foreach (var subject in Model.SubjectsList)
                {
                <tr>
                    <td>@subject.SubjectId</td>
                    <td>@subject.SubjectName</td>
                    <td>@subject.VU</td>

                </tr>
                }
            </tbody>
        </tbody>
    </table>
</div>