@model List<TeachersModel>
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Teachers</li>
    </ol>
</nav>

<div class="container">
    <div class="row">
        <div class="col-xl-12 col-md-12 col-sm-12 d-flex justify-content-start">
            <a type="button" class="btn btn-primary" asp-action="UpSert" asp-controller="Teachers"><span class=" fas fa-plus"></span>Add</a>
        </div>
        <div class="col-xl-12 col-md-12 col-sm-12 mt-3">
            <table class="table table-hover" id="TeachersTable">
                <thead>
                    <tr>
                        <th>Actions</th>
                        <th>Id</th>
                        <th>teacher Name</th>
                        <th>IsActive</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (TeachersModel teacher in Model)
                        {
                            <tr>

                                <td>
                                    <a type="button" class="btn btn-success" asp-action="View" asp-controller="Teachers" asp-route-id="@teacher.TeacherId">
                                        <span class="fas fa-eye"></span>
                                    </a>
                                    <a type="button" class="btn btn-warning" asp-action="UpSert" asp-controller="Teachers" asp-route-id="@teacher.TeacherId">
                                        <span class="fas fa-pencil"></span>
                                    </a>
                                    <a type="button" class="btn btn-danger" asp-action="Delete" asp-controller="Teachers" asp-route-id="@teacher.TeacherId">
                                        <span class="fas fa-trash"></span>
                                    </a>
                                </td>

                                <td>@teacher.TeacherId</td>
                                <td>@teacher.Name</td>
                                <td>
                                    @if (teacher.IsActive)
                                    {
                                        <span class="badge bg-success">Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactivo</span>
                                    }
                                </td>

                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function (){
            $('#TeachersTable').DataTable();
        });
    </script>
}